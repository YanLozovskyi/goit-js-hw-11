{{#each this}}
  <li class='gallery-item'>
    <a class='gallery-link link' href='{{largeImageURL}}'>
      <img src='{{webformatURL}}' alt='{{tags}}' loading='lazy' />
      <div class='card-info'>
        <p class='card-info-item'>
          <b>Likes</b>{{likes}}
        </p>
        <p class='card-info-item'>
          <b>Views</b>
          {{views}}
        </p>
        <p class='card-info-item'>
          <b>Comments</b>
          {{comments}}
        </p>
        <p class='card-info-item'>
          <b>Downloads</b>
          {{downloads}}
        </p>
      </div>
    </a></li>
{{/each}}